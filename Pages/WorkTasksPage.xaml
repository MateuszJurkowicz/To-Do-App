<Page x:Class="To_Do_App.Pages.WorkTasksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:To_Do_App.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="WorkTasksPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Tytuł zadania"/>
            <TextBox Text="{Binding NewWorkTaskTitle, Mode=TwoWay}"
                     Style="{StaticResource DefaultBoxStyle}"/>
            <TextBlock Text="Opis zadania"/>
            <TextBox Text="{Binding NewWorkTaskDescription, Mode=TwoWay}"
                     Style="{StaticResource DefaultBoxStyle}"/>
            <TextBlock Text="Data realizacji zadania"/>
            <DatePicker Text="{Binding NewWorkTaskFinishDate, Mode=TwoWay}"
                        Margin="0 10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment    ="Center">
                <Button Command="{Binding AddNewTaskCommand}"
                        Style="{StaticResource DefaultButtonStyle}"
                        Content="Dodaj"/>
                <Button Command="{Binding DeleteSelectedTasksCommand}"
                        Style="{StaticResource DefaultButtonStyle}"
                        Content="Usuń"
                        Background="Red"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="To są twoje zadania" FontSize="18" HorizontalAlignment="Center"/>
            <ScrollViewer Width="300" Height="300">
                <ItemsControl ItemsSource="{Binding WorkTasks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:WorkTask/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
        
    </Grid>
</Page>
